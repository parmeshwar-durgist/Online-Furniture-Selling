
<%
if(product_det)
{
  var imgs = product_det.product_image.split(",");
  var img = "";
  for(var j=0;j<imgs.length;j++)
  {
    if(img[j]!='')
    {
      img = imgs[j];
      break;
    }
  }
%>
<section class="py-5">
    <div class="container">
      <div class="row gx-5">
        <aside class="col-lg-6">
          <div class="border rounded-4 mb-3 d-flex justify-content-center">
            <a data-fslightbox="mygalley" class="rounded-4" target="_blank" data-type="image" href="/uploads/<%=img%>">
              <img style="max-width: 100%; max-height: 100vh; margin: auto;" class="rounded-4 fit" src="/uploads/<%=img%>" />
            </a>
          </div>
          <div class="d-flex justify-content-center mb-3">
            <%
              for(var i=0; i<imgs.length; i++) {
                if(imgs[i]!= "") {
              %>
            <a data-fslightbox="mygalley" class="border mx-1 rounded-2" target="_blank" data-type="image" href="/uploads/<%=imgs[i]%>" class="item-thumb">
              <img width="60" height="60" class="rounded-2" src="/uploads/<%=imgs[i]%>" />
            </a>
           <% } } %>
          </div>
        </aside>
        <main class="col-lg-6">
          <div class="ps-lg-3">
            <h4 class="title text-dark">
             <%=product_det.product_name%>
            </h4>
            <div class="mb-3">
              <span class="h5">&#8377; <%=product_det.product_price%> </span>
              <span class="text-muted">/-</span>
            </div>
  
            <p>
              <%=product_det.product_details%> 
            </p>
  
            <div class="row">
              <dt class="col-3">Type:</dt>
              <dd class="col-9">
                <%=product_det.product_type_name%> 
              </dd>
  
              <dt class="col-3">Color</dt>
              <dd class="col-9" style="<%=product_det.product_color%>;"><%=product_det.product_color%></dd>
  
              <dt class="col-3">Size</dt>
              <dd class="col-9"><%=product_det.product_size%></dd>
  
            </div>
  
            <hr />
            <a href="/add_to_cart/<%=product_det.product_id%>" class="btn btn-primary shadow-0"> <i class="me-1 fa fa-shopping-basket"></i> Add to cart </a>

          </div>
        </main>
      </div>
    </div>
  </section>
<% } %> 