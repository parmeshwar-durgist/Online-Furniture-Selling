<%- include('navbar.ejs')  %>

<%
if(product_det) 
{
    var arr = product_det.product_image.split(",");
    var img = ""
    for(var i=0; i<arr.length; i++)
    {
      if(arr[i]!='')
      {
        img = arr[i];
        break;
      }
    }
    %>

<section class="py-5">
  <div class="container">
    <div class="row gx-5">
      <aside class="col-lg-6">
        <div class="border rounded-4 mb-3 d-flex justify-content-center">
          <a data-fslightbox="mygalley" class="rounded-4" target="_blank" data-type="image" href="/uploads/<%=img%>">
            <img style="max-width: 100%; max-height: 100vh; margin: auto;" class="rounded-4 fit" src="/uploads/<%=img%>" />
          </a>
        </div>
        <div class="d-flex justify-content-center mb-3">
          <% for(var j=0; j<arr.length; j++)
          {
            if(arr[j]!='')
            { %>
          <a data-fslightbox="mygalley" class="border mx-1 rounded-2" target="_blank" data-type="image" href="/uploads/<%=arr[j]%>" class="item-thumb">
            <img width="60" height="60" class="rounded-2" src="/uploads/<%=arr[j]%>" />
          </a>
          <% } } %>
        </div>
      </aside>
      <main class="col-lg-6">
        <div class="ps-lg-3">
          <h4 class="title text-dark">
           <%=product_det.product_name%>
          </h4>
          <div class="mb-3">
            <span class="h5">&#8377; <%=product_det.product_price%> </span>
            <span class="text-muted">/-</span>
          </div>

          <p>
            <%=product_det.product_details%> 
          </p>

          <div class="row">
            <dt class="col-3">Type:</dt>
            <dd class="col-9">
              <%=product_det.product_type_name%> 
            </dd>

            <dt class="col-3">Color</dt>
            <dd class="col-9" style="background-color: <%=product_det.product_color%>;"></dd>

            <dt class="col-3">Size</dt>
            <dd class="col-9"><%=product_det.product_size%></dd>

          </div>

          <hr />

          <% if(!in_cart) { %>
          <a href="/add_to_cart/<%=product_det.product_id%>" class="btn btn-primary shadow-0"> <i class="me-1 fa fa-shopping-basket"></i> Add to cart </a>
          <% } else { %>
          <a href="/cart" class="btn btn-primary shadow-0"> <i class="me-1 fa fa-shopping-basket"></i> Go to cart </a>
          <% } %>
        </div>
      </main>
    </div>
  </div>
</section>

<% } %>

<%- include('footer.ejs')  %>
