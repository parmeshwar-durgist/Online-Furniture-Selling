<%-include('navbar.ejs')%>

<div class="container p-4 bg-white">
    <div class="col-md-12 mb-2 text-center bg-dark p-2 text-white">
        <h3>User Contect List</h3>
    </div>
</div>

<div class="p-5 bg-white ">
<table class="table table-bordered table-striped">
    <tr>
        <th></th>
        <th>SNO</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Message</th>
    </tr>
    <% for(var i=0;i<contectdata.length;i++) { %>
        <tr>
            <td>
                <a href="/admin/delete_contect/<%=contectdata[i].contect_id%>"> 
                    <button class="btn btn-danger p-0 pe-2 ps-2"> <i class="fas fa-trash text-white"></i> </button> 
                </a>
            </td>
            <td><%=i+1%></td>
            <td><%=contectdata[i].fname%></td>
            <td><%=contectdata[i].lname%></td>
            <td><%=contectdata[i].email%></td>
            <td><%=contectdata[i].message%></td>
        </tr>
    <% } %>
</table>
</div>

