<%- include('navbar.ejs')  %>

<form action="/admin/save_product" method="post" enctype="multipart/form-data">

    <div class="container p-4 bg-white">
        <div class="col-md-12 mb-2 text-center bg-dark p-2 text-white">
            <h3>Add New Product</h3>
        </div>
        <div class="row">
            <div class="col-md-3 mt-3">
                Select Type 
                <select name="product_type" required class="form-control">
                    <option selected disabled value="">Select Type</option>
                    <% for(i=0;i<types.length;i++) { %>
                        <option value="<%=types[i].product_type_id%>"><%=types[i].product_type_name%></option>
                    <% } %>
                </select>
                <!-- <input type="text" name="product_type_name" class="form-control mt-2"> -->
            </div>
            <div class="col-md-3 mt-3">
                Enter Product Name 
                <input type="text" name="product_name" class="form-control">
            </div>
            <div class="col-md-3 mt-3">
                Enter Product Price 
                <input type="number" name="product_price" class="form-control">
            </div>
            <div class="col-md-3 mt-3">
                Duplicate Price 
                <input type="number" name="duplicate_price" class="form-control">
            </div>
            <div class="col-md-3 mt-3">
                Product Image 
                <input type="file" multiple name="product_image" class="form-control">
            </div>
            <div class="col-md-3 mt-3">
                Product Size 
                <input type="text" name="product_size" class="form-control">
            </div>
            <div class="col-md-3 mt-3">
                Product Color 
                <input type="color" name="product_color" class="form-control">
            </div>
            <div class="col-md-3 mt-3">
                Product Label 
                <input type="text" name="product_label" class="form-control">
            </div>
            <div class="col-md-12 mt-3">
                Product Details 
                <textarea name="product_details" class="form-control"></textarea>
            </div>
            <div class="col-md-12 mt-2 text-center">
                <button class="btn btn-primary">Save Product Type</button>
            </div>
        </div>
    </div>
</form>

