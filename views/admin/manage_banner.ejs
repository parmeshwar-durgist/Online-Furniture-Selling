<%- include('navbar.ejs')  %>

<form action="/admin/save_banner" method="post" enctype="multipart/form-data">
    <div class="container p-3 bg-white">
        <div class="col-md-12 mb-4">
            <h3>Manage Banner</h3>
        </div>
        <div class="row">
        <div class="col-md-6 mt-3">
            Enter Title 
            <input type="text" name="banner_title" value="<%=banner_info[0].banner_title%>" class="form-control mt-2">
        </div>
        <div class="col-md-6 mt-3">
            Enter Details 
            <input type="text" name="banner_details" value="<%=banner_info[0].banner_details%>" class="form-control mt-2">
        </div>
        <div class="col-md-6 mt-3">
            Shop Now Link 
            <input type="text" name="banner_link" value="<%=banner_info[0].banner_link%>" class="form-control 3">
        </div>
        <div class="col-md-4 mt-3">
            Banner Image
            <input type="file" name="banner_img" class="form-control mt-2">
        </div>
        <div class="col-md-2 mt-3">
            <img src="/uploads/<%=banner_info[0].banner_img%>" width="100%">
        </div>
        <div class="col-md-12 mt-3 text-center">
            <button class="btn btn-primary">Save Binner</button>
        </div>
        </div>
    </div>
</form>

