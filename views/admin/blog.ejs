<%-include('navbar.ejs')%>
<form action="/admin/save_blog" method="post" enctype="multipart/form-data">
    
    <div class="container p-4 bg-white">
        <div class="col-md-12 mb-2 text-center bg-dark p-2 text-white">
            <h3>Add Blogs</h3>
        </div>
        <div class="row">
            <div class="col-md-6 mt-3">
                Enter Blog Details
                <input type="text" name="blog_details" class="form-control">
            </div>
            <div class="col-md-6 mt-3"> 
                Enter Blog Image
                <input type="file" name="blog_img" class="form-control">
            </div>
            <div class="col-md-6 mt-3">
                Enter Blog Name
                <input type="text" name="blog_name" class="form-control">
            </div>
            <div class="col-md-6 mt-3">
                Enter Blog Date
                <input type="date" name="blog_date" class="form-control">
            </div>
            <div class="col-md-12 mt-3 text-center">
                <button class="btn btn-primary">Save Blog</button>
            </div>
        </div>
    </div>
</form>


<br><br>


<table class="table">
    <tr>
        <th></th>
        <th>SNO</th>
        <th>Blog Name</th>
        <th>Blog date</th>
        <th>Blog Details</th>
        <th>Blog Image</th>
    </tr>
    <% for(var i=0;i<blog_list.length;i++) { %>
        <tr>
            <td>
                <a href="/admin/edit_blog/<%=blog_list[i].blog_id%>"> 
                    <button class="btn btn-primary p-0 pe-2 ps-2"> <i class="fas fa-pencil"></i> </button>
                </a>
                <a href="/admin/delete_blog/<%=blog_list[i].blog_id%>"> 
                    <button class="btn btn-danger p-0 pe-2 ps-2"> <i class="fas fa-trash text-white"></i> </button> 
                </a>
            </td>
            <td><%=i+1%></td>
            <td><%=blog_list[i].blog_name%></td>
            <td><%=blog_list[i].blog_date%></td>
            <td><%=blog_list[i].blog_details%></td>
            <td>
                <img src="/uploads/<%=blog_list[i].blog_img%>" width="100px">
            </td>
        </tr>
    <% } %>
</table>

